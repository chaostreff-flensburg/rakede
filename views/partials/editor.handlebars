<textarea name="content" id="content">{{#if post}}{{post.content}}{{else if site}}{{site.content}}{{else}}This is a TinyMCE-Editor. Nice.{{/if}}</textarea>

<script src="/js/tinymce/tinymce.min.js"></script>
<script>
tinymce.init({
  selector: '#content',
  automatic_uploads: true,
  images_upload_url: '/rakede/upload',
  plugins: "anchor autosave autoresize code image link media paste wordcount",
  menubar: "insert tools image imagetools",
  paste_data_images: true
});
</script>
