<h1>Create new Post</h1>

<form method="post">
  <textarea name="title" rows="1" cols="50">Posttitle</textarea>
  <textarea name="content" id="content">This is a TinyMCE-Editor. Nice.</textarea>
  <input type="hidden" name="author" value="123">
  <input type="hidden" name="category" value="321">
  <input type="submit" name="submit" value="Save">
</form>

<script src="/js/tinymce/tinymce.min.js"></script>
<script>
tinymce.init({
  selector: '#content',
  plugins: "anchor autosave autoresize code image link media paste wordcount",
  menubar: "insert tools image imagetools"
});
</script>
